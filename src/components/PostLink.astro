---
const { slug, title, tags, description, pubDate } = Astro.props;
---

<li class="post">
  <a href={`/posts/${slug}/`} class="title">{title}</a>
  <time datetime={pubDate}>
    {
      new Date(pubDate).toLocaleDateString("en-us", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })
    }
  </time>
  <br />
  {description && <span class="excerpt">{description}</span>}
  <div>
    {
      tags &&
        tags.map((tag) => (
          <a class="tag" href={`/tag/${tag}`}>
            #{tag}
          </a>
        ))
    }
  </div>
</li>
